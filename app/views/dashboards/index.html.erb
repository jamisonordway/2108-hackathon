<h1>Turing School Attendance</h1>
<p><%= link_to "Lesson Dates Index", lesson_dates_path %></p>

<h3>Live Meetings</h3>

<% @meetings.each do |meeting| %>
  <%= link_to "#{meeting.topic}", meeting_path(meeting.id)  %>
<% end %>

<h3>Take attendance by module</h3>

<% @mods.each do |mod| %>
  <p><%= link_to "Take attendance for #{mod.full_module_name}", new_mod_lesson_date_path(mod, @meetings.last.id) %></p>
<% end %>
